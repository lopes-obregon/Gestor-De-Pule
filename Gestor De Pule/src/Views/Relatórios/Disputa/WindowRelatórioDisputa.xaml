<Window x:Class="Gestor_De_Pule.src.Views.Relatórios.Disputa.WindowRelatórioDisputa"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gestor_De_Pule.src.Views.Relatórios.Disputa"
        mc:Ignorable="d"
        Title="Relatório de Disputa" Height="600" Width="800">
    <Grid>
        <Grid Margin="10,28,536,463">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Selecione A Disputa" Width="120" Height="30" Grid.Column="0"/>
            <ComboBox x:Name="ComboBoxDisputaCadastradas" Grid.Column="1" Width="100" Height="20"/>
        </Grid>
        <StackPanel Margin="308,33,28,463" Orientation="Horizontal">
            <Button Content="Gerar Relatório" Width="100" Height="30" Margin="5" Click="GerarRelatório"/>
            <Button Content="Imprimir"  Width="100" Height="30" Margin="5" Click="ImprirDisputa"/>
        </StackPanel>
        <Grid Margin="10,126,600,370">
            <Label x:Name="LabelDisputaNome" Content="Label" Height="30" Margin="10,29,63,29"/>
        </Grid>
        <ListView x:Name="ListViewDisputa" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,219,400,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                   
                </GridView>
            </ListView.View>
        </ListView>
        <ListView x:Name="ListViewPules" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="405,219,95,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Nº" DisplayMemberBinding="{Binding Número}"/>
                    <GridViewColumn Header="Valor" DisplayMemberBinding="{Binding ValorFormatado}"/>
                    <GridViewColumn Header="Apostador" DisplayMemberBinding="{Binding Apostador.Nome}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label Content="Pules" HorizontalAlignment="Left" Margin="502,196,0,0" VerticalAlignment="Top"/>
        <Label Content="Resultados" HorizontalAlignment="Left" Margin="205,188,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
