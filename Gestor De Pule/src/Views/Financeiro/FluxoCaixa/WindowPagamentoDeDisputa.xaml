<Window x:Class="Gestor_De_Pule.src.Views.Financeiro.FluxoCaixa.WindowPagamentoDeDisputa"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gestor_De_Pule.src.Views.Financeiro.FluxoCaixa"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="Pagamento De Disputa" Height="450" Width="450">
    <Grid>

        <Grid Margin="0,10,0,260">
            <!--Grid definição-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Selecione Disputa Para O Pagamento"  Margin="0,4,0,128"  Grid.Column="0"/>
            <ComboBox x:Name="ComboBoxDisputasCadastradas"  Margin="0,4,90,130" Width="120" Height="30" Grid.Column="1"/>
            <Label Content="Digite Quantos Deseja Pagar"  Margin="10,55,47,82" />
            <!--<TextBox x:Name="TextBoxNumber" Grid.Column="1"  Margin="0,0,160,44" Grid.Row="1"  PreviewTextInput="TextBoxNumberPreviewTextInput"/>-->
            <xctk:DecimalUpDown x:Name="DecimalUpDownValorPagar" Width="120" Height="30" FormatString="N2" Increment="0.01"   Grid.Column="1" Margin="7,55,98,79" />



        </Grid>
        <StackPanel Margin="0,217,0,136" Orientation="Horizontal">
            <Button Content="Pagar" Width="86" Height="35" Margin="100,10,10,10" Click="PagarDisputa"/>
            <Button Content="Cancelar" Width="86" Height="35" Margin="0,10,10,10"/>
        </StackPanel>

    </Grid>
</Window>
