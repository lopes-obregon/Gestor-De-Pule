<Window x:Class="Gestor_De_Pule.src.Views.Financeiro.FluxoCaixa.WindowPagamentoDeDisputa"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gestor_De_Pule.src.Views.Financeiro.FluxoCaixa"
        mc:Ignorable="d"
        Title="Pagamento De Disputa" Height="450" Width="450">
    <Grid>

        <Grid Margin="0,0,0,285">
            <!--Grid definição-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>

            </Grid.RowDefinitions>
            <!--Dados do grid-->
            <Label Content="Selecione Disputa Para O Pagamento" Grid.Column="0"/>
            <ComboBox x:Name="ComboBoxDisputasCadastradas" Grid.Column="1" Grid.Row="0" Margin="5,21,20,24" Width="200" Height="30"/>
            <Label Content="Digite Quantos Deseja Pagar" Grid.Column="0" Grid.Row="1" />
            <TextBox x:Name="TextBoxNumber" Grid.Column="1"  Margin="45,22,60,22" Grid.Row="1" TextWrapping="Wrap"   Width="120" Height="30" PreviewTextInput="TextBoxNumberPreviewTextInput"/>



        </Grid>
        <StackPanel Margin="0,165,0,188" Orientation="Horizontal">
            <Button Content="Pagar" Width="86" Height="35" Margin="100,10,10,10" Click="PagarDisputa"/>
            <Button Content="Cancelar" Width="86" Height="35" Margin="105,10,10,10"/>
        </StackPanel>

    </Grid>
</Window>
