<Window x:Class="Gestor_De_Pule.src.Views.Financeiro.FluxoCaixa.WindowPagamentoDeDisputa"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gestor_De_Pule.src.Views.Financeiro.FluxoCaixa"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="Pagamento De Disputa" Height="435" Width="450">
    <Grid>
        <StackPanel Margin="0,336,0,10" Orientation="Horizontal">
            <Button Content="Pagar" Width="86" Height="35" Margin="150,10,10,10" Click="PagarDisputa"/>
            <Button Content="Cancelar" Width="86" Height="35" Margin="0,10,10,10" Click="Sair"/>
        </StackPanel>
        <StackPanel Margin="10,10,10,112" Orientation="Vertical">
            <Label Content="Selecione Disputa Para O Pagamento" Width="210" Height="30" Margin="20"/>
            <ComboBox x:Name="ComboBoxDisputasCadastradas" Width="120" Height="30" Margin="20"/>
            <Label Content="Digite O Valor A Ser Pago" Width="150" Margin="20"/>
            <xctk:DecimalUpDown x:Name="DecimalUpDownValorPagar" Width="120" Height="30" FormatString="N2" Increment="0.01"  />

        </StackPanel>

    </Grid>
</Window>
